{% extends 'layout.html.twig' %}

{% block title %}Zaloguj !{% endblock %}

{% block content %}
<div class='center-card'>
    <form method="post" class='auth-form'>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="">
                Jesteś już zalogowany jako {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Wyloguj</a>
            </div>
        {% else %}
    
        <h1>Zaloguj się</h1>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="text-input" autocomplete="username" required autofocus placeholder="Nazwa użytkownika">
        <input type="password" name="password" id="inputPassword" class="text-input" autocomplete="current-password" required placeholder="Hasło">
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">
            Zaloguj
        </button>
        <div class="center-col">
            <p>lub</p>
            <a href='register'>Zarejestruj się</a>
        </div>
        {% endif %}
    </form>
    </div>
{% endblock %}
